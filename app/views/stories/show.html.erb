<p id="notice"><%= notice %></p>
<div class="d-flex justify-content-center container  mb-3">
  <div class="p-2 card flex-grow-1 mb-2">
    <div class="card-body">
      <div class=" d-flex justify-content-end">
        <%= render partial: 'partials/story_status_badge', locals: { story: @story } %>
      </div>
      <div class="form-group mt-1">
        <label class='form-text'>Headline</label>
        <input value="<%= @story.headline %>" class="form-control">
      </div>
      <div class="form-group mt-1">
        <label class='form-text'>Body</label>
        <textarea cols=3 rows=6 class="form-control">
        <%= @story.body %>
      </textarea>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
