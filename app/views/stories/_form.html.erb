<%= form_with(model: story, local: true) do |form| %>
  <% if story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>
      <ul>
        <% story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="d-flex justify-content-center container  bd-highlight mb-3">
    <div class="p-2 card flex-grow-1 mb-2">
      <div class="card-body">
        <div class="d-flex justify-content-end">
          <%= render partial: 'partials/story_status_badge', locals: { story: story } %>
        </div>
        <div class="form-group mt-1">
          <label class='form-text'>Writer</label>
          <%= form.select :writer_id, @users, {}, class: 'form-control' %>
        </div>
        <div class="form-group mt-1">
          <label class='form-text'>Reviewer</label>
          <%= form.select :reviewer_id, @users, {}, class: 'form-control' %>
        </div>
        <div class="form-group mt-1">
          <label class='form-text'>Headline</label>
          <%= form.text_field :headline, class: 'form-control' %>
        </div>
        <div class="form-group mt-1">
          <label class='form-text'>Body</label>
          <%= form.text_area :headline,rows: 3, cols: 6, class: 'form-control' %>
        </div>
        <div class="">
          <button type="submit" class="btn btn-success">Save</button>
          <%= link_to 'Cancel',stories_path, class:"btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
